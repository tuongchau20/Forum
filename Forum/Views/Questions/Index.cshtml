@model IEnumerable<Forum.Models.Question>

@{
    ViewData["Title"] = "Forum";
    var successMessage = TempData["SuccessMessage"] as string;

}
@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="alert alert-success">@successMessage</div>
}
<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<div class="container mt-5">
    <h1>Forum</h1>
    <div class="row">
        <div class="col-md-8">
            @foreach (var question in Model)
            {
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Question @question.Id: @question.Title</h5>
                        <p class="card-text">@question.Description</p>
                        <p class="card-text">Posted by: @question.User.UserName | Total answers: @question.Answers.Count</p>
                        <a href="@Url.Action("Details", new { id = question.Id })" class="btn btn-info">View Details</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
